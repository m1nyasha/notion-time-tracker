{
  "name": "planme",
  "version": "1.0.0",
  "description": "Modern task planning desktop app with Electron + Vue 3 + TypeScript",
  "main": "dist/main.js",
  "author": "Protasevich",
  "license": "MIT",
  "keywords": [
    "electron",
    "vue3",
    "typescript",
    "tailwindcss",
    "planner",
    "productivity"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"npm run dev:electron\"",
    "dev:vue": "vite",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:vue && npm run build:electron",
    "build:vue": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "type-check": "tsc --noEmit -p tsconfig.vue.json",
    "type-check:main": "tsc --noEmit -p tsconfig.main.json",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.vue",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.vue --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,vue,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,vue,json,css,md}\"",
    "check-all": "npm run type-check && npm run type-check:main && npm run lint && npm run format:check"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@notionhq/client": "^4.0.2",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.5.1",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.19.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.smartcat.notion-tasks-timer",
    "productName": "Notion Tasks Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/renderer/assets/icon/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "src/renderer/assets/icon/256x256.ico"
    },
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/icon/256x256.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/renderer/assets/icon/256x256.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
